<div class="container p-3 mt-20"> 
  <div class="row">
    <div class="col-md-4 mx-auto">
      <span class="d-flex justify-content-center">Si aún no tienes cuenta</span> 
      <span class="d-flex justify-content-center"><%= link_to "Registrate", new_registration_path(resource_name) %></span>
      <div class="card shadow">
        <div class="card-body">
          <div class="box">
              <div class="image d-flex justify-content-center">
                <%= image_tag("2695.png", :alt => "Logo VitalBooking", :style => "width: 120px; height: 120px;border-radius: 55%;")%>
              </div>
            <h2 class="text-center">Iniciar Sesión</h2>

            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-inputs">
                <%= f.input :email,
                            required: false,
                            autofocus: true,
                            input_html: { autocomplete: "email" } %>
                <%= f.input :password,
                            required: false,
                            input_html: { autocomplete: "current-password" } %>
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </div>
              <div class="d-flex justify-content-center">
                <div class="form-actions">
                  <button class="btn btn-primary">Iniciar sesión</button>
                </div>
              </div>
            <% end %>
            <br>
            <div class="text-center">
              <%= link_to "¿Olvidaste tú contraseña?", new_password_path(resource_name), class: "text-center" %><br />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


