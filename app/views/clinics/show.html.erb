<h1> Registro de entidades archivadas </h1>
 <hr>
 <%# link_to 'Nueva Clinica', new_clinic_path, class: 'btn btn-primary ml-2', data: { turbo_frame: 'new_clinic' } %>
<%# turbo_frame_tag 'form_clinic', src: new_clinic_path %>
 <%# <button type="button" class="btn btn-primary ml-2" data-bs-toggle="modal" data-bs-target="#miModal">
  Nueva Clinica
</button> %>
<%= turbo_frame_tag 'clinic_table' do %>
<br/>
<div class="row container-fluid">
    <div class="col-md-12 mt-3">
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
              <th scope="col">Nombre</th>
                <th scope="col">Direccion</th>
                <th scope="col">Ciudad</th>
                <th scope="col"colspan="1">Opciones</th>
            </tr>
        </thead>
        <tbody id='clinic_list'>
            <% @clinics.each do |clinic| %>
                <tr id="<%= dom_id(clinic) %>">
                    <td><%= clinic.name %></td>
                    <td><%= clinic.address %></td>
                    <td><%= clinic.city %></td>
                    <td><%# link_to 'Restaurar', clinic_restore_path(@clinic), method: :put, target: '_top' %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>
<% end %>
<%# render 'modal' %>
<%= turbo_stream_from 'clinic_list' %>