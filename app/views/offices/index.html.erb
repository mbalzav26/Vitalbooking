<h1> Consultorios de la <%= @clinic.name %> </h1>
<hr>
<%= link_to 'Registrar Consultorio', new_clinic_office_path, class: 'btn btn-primary', data: { turbo_frame: 'new_office' } %>

<%= turbo_frame_tag 'office_table' do %>
    <table class="table table-bordered table-hover mt-4">
        <thead>
        <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Codigo</th>
            <th colspan="3">Opciones</th>
        </tr>
        </thead>
        <tbody id='office_list'>
            <%= render @offices %>
        </tbody>
    </table>
<%end%>
<%= turbo_stream_from 'office_list' %>

